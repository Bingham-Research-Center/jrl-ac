<%- include('../partials/header') %>

<section class="team-header">
    <div class="container">
        <h1>Our Research Team</h1>
        <p>Meet the researchers advancing environmental science</p>
    </div>
</section>

<section class="team-members">
    <div class="container">
        <% if (members.length === 0) { %>
            <div class="no-members">
                <p>Team information coming soon.</p>
            </div>
        <% } else { %>
            <% members.forEach(member => { %>
                <div class="member-section">
                    <h2 class="member-name"><%= member.name %></h2>
                    <p class="member-role"><%= member.role %></p>
                    
                    <div class="member-images">
                        <div class="image-wrapper">
                            <img src="<%= member.images.action %>" 
                                 alt="<%= member.name %> in action"
                                 onerror="this.src='/images/placeholder.jpg'">
                        </div>
                        <div class="image-wrapper headshot">
                            <img src="<%= member.images.headshot %>" 
                                 alt="<%= member.name %> headshot"
                                 onerror="this.src='/images/placeholder.jpg'">
                        </div>
                        <div class="image-wrapper">
                            <img src="<%= member.images.passion %>" 
                                 alt="<%= member.name %> passion"
                                 onerror="this.src='/images/placeholder.jpg'">
                        </div>
                    </div>
                    
                    <div class="member-bio">
                        <%- member.bio %>
                    </div>
                    
                    <hr class="member-divider">
                </div>
            <% }) %>
        <% } %>
    </div>
</section>

<%- include('../partials/footer') %>